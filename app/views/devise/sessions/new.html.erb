<%= render 'forms/nabvar' %>
<div class="container info login">
   <div class="registration-form">
    <h2 class="text-center">Iniciar sesión</h2>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field">
        <br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email" , placeholder: "email"%>
      </div>

      <div class="field">
        <br />
        <%= f.password_field :password, autocomplete: "current-password" , placeholder: "contraseña"%>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>

      <div class="actions">
        <%= f.submit "Iniciar sesión" ,  class: "btn info login" %> <br>
        <%= link_to "¿Olvidaste tu contraseña?", new_password_path(resource_name) %><br />
      </div>
      <% end %>  
  </div>
</div>
