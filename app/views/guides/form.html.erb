<%= render 'nabvar' %>


<div class="container">
  <div class="registration-form">
    <%= form_with model: @formulario, url: guides_form_path do |form| %>
      <div class="form-icon"> <span> <i class="fa-solid fa-user"></i> </span> </div>
      <%= form.text_field :name, class: "form-control item", placeholder: "Nombre completo" %>
      <%= form.text_field :email, class: "form-control item",  placeholder: "Su email" %>
      <%= form.text_field :phone, class: "form-control item",  placeholder: "Su número de telefono" %>
      <%= form.text_area :about, class: "form-control item",  placeholder: "Cuéntanos acerca de ti" %>
      <%= form.button "Enviar solicitud", class: "btn btn-block create-account" %>
    <% end %>
  </div>
</div>

